<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9AC0CD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_apresentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculo de consumo de combustivel"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF">

        <Switch
            android:id="@+id/abastecimento"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Abastecimento"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ADD8E6"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txt_km_rodados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quilometros rodados:"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_km_rodados"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ADD8E6"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_qtd_litros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidades de litros abastecidos:"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edt_qtd_litros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="Calcular"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/txt_apro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aproximadamente"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_resultado"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_litro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Km por litro"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:textSize="17sp"/>
    </LinearLayout>
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_verde"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="#1bb74f"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_vermelho"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="#ff0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_laranja"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="#ff8000"
            android:visibility="invisible" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo OK"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:textColor="#007400"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txt_alto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atenção!! consumo alto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txt_medio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo moderado"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:textColor="#ff8000"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>
